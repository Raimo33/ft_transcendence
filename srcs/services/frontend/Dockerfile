FROM alpine:3.19

SHELL ["/bin/ash", "-c"]

RUN apk install --no-cache nodejs npm

COPY ./site /var/www/html

RUN adduser -DHS frontend
RUN chown -R frontend:frontend /var/www/html

WORKDIR /var/www/html

RUN npm install bootstrap

VOLUME ["var/www/html"]